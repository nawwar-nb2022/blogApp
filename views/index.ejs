<!DOCTYPE html>
<html lang="en">
    <%- include("./patern/head.ejs") %>
<body>
    
    <%- include("./patern/navigation.ejs") %>
    <div class="blogs content">
        <h2>All blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog=>{ %>
                <a href="/blogs/<%=blog.id%>" class="single">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }) %>
        <% } else { %>
            <h3>there is no blog to display </h3>
        <% } %>
    </div>
    
    <%- include("./patern/footer.ejs") %>
</body>
</html>